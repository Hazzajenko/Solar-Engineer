{
	"extends": [
		"../../../../.eslintrc.json"
	],
	"ignorePatterns": [
		"!**/*"
	],
	"overrides": [
		{
			"files": [
				"*.ts"
			],
			"rules": {
				"@angular-eslint/component-class-suffix": [
					"error",
					{
						"suffixes": [
							"Component",
							"Page",
							"Container",
							"View"
						]
					}
				],
				"no-mixed-spaces-and-tabs": "off",
				"@angular-eslint/directive-selector": [
					"error",
					{
						"type": "attribute",
						"prefix": "app",
						"style": "camelCase"
					}
				],
				"@angular-eslint/component-selector": [
					"error",
					{
						"type": "element",
						"prefix": "app",
						"style": "kebab-case"
					}
				]
			},
			"extends": [
				"plugin:@nx/angular",
				"plugin:@angular-eslint/template/process-inline-templates"
			]
		},
		{
			"files": [
				"*.html"
			],
			"extends": [
				"plugin:@nx/angular-template"
			],
			"rules": {}
		}
	]
}
