{
	"extends": [
		"../../../.eslintrc.json"
	],
	"ignorePatterns": [
		"!**/*"
	],
	"overrides": [
		{
			"files": [
				"*.ts"
			],
			"rules": {
				"@angular-eslint/directive-selector": [
					"error",
					{
						"type": "attribute",
						"prefix": "app",
						"style": "camelCase"
					}
				],
				"@angular-eslint/component-selector": [
					"error",
					{
						"type": "element",
						"prefix": [
							"app",
							"dialog",
							"side-ui",
							"overlay",
							"menu",
							"notification"
						],
						"style": "kebab-case"
					}
				],
				"no-mixed-spaces-and-tabs": 0
			},
			"extends": [
				"plugin:@nx/angular",
				"plugin:@angular-eslint/template/process-inline-templates"
			]
		},
		{
			"files": [
				"*.html"
			],
			"extends": [
				"plugin:@nx/angular-template"
			],
			"rules": {}
		}
	]
}
