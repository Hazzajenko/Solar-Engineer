{
	"name": "design-app",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"prefix": "app",
	"sourceRoot": "apps/design-app/src",
	"tags": [
		"design-app:app"
	],
	"targets": {
		"deploy": {
			"builder": "@nrwl/workspace:run-commands",
			"options": {
				"commands": [
					"nx build design-app --configuration=production",
					"docker build -f ./apps/design-app/Dockerfile . -t solarengineer-client:1.0.2"
				],
				"parallel": false
			}
		},
		"build": {
			"executor": "@angular-devkit/build-angular:browser",
			"outputs": [
				"{options.outputPath}"
			],
			"options": {
				"outputPath": "dist/apps/design-app",
				"index": "apps/design-app/src/index.html",
				"main": "apps/design-app/src/main.ts",
				"polyfills": [
					"zone.js"
				],
				"tsConfig": "apps/design-app/tsconfig.app.json",
				"assets": [
					"apps/design-app/src/favicon.ico",
					"apps/design-app/src/assets"
				],
				"styles": [
					"apps/design-app/src/styles.css",
					"node_modules/ngx-toastr/toastr.css"
				],
				"scripts": []
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "5mb",
							"maximumError": "10mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "2kb",
							"maximumError": "4kb"
						}
					],
					"outputHashing": "all",
					"fileReplacements": [
						{
							"replace": "libs/shared/environment/src/lib/environment.ts",
							"with": "libs/shared/environment/src/lib/environment.prod.ts"
						}
					]
				},
				"development": {
					"buildOptimizer": false,
					"optimization": false,
					"vendorChunk": true,
					"extractLicenses": false,
					"sourceMap": true,
					"namedChunks": true
				}
			},
			"defaultConfiguration": "production"
		},
		"serve": {
			"executor": "@angular-devkit/build-angular:dev-server",
			"options": {
				"port": 4200
			},
			"configurations": {
				"production": {
					"browserTarget": "design-app:build:production"
				},
				"development": {
					"browserTarget": "design-app:build:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"browserTarget": "design-app:build"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": [
				"{options.outputFile}"
			],
			"options": {
				"lintFilePatterns": [
					"apps/design-app/**/*.ts",
					"apps/design-app/**/*.html"
				]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": [
				"{workspaceRoot}/coverage/{projectRoot}"
			],
			"options": {
				"jestConfig": "apps/design-app/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		},
		"storybook": {
			"executor": "@storybook/angular:start-storybook",
			"options": {
				"port": 4400,
				"configDir": "apps/design-app/.storybook",
				"browserTarget": "design-app:build",
				"compodoc": false
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"build-storybook": {
			"executor": "@storybook/angular:build-storybook",
			"outputs": [
				"{options.outputDir}"
			],
			"options": {
				"outputDir": "dist/storybook/design-app",
				"configDir": "apps/design-app/.storybook",
				"browserTarget": "design-app:build",
				"compodoc": false
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"static-storybook": {
			"executor": "@nx/web:file-server",
			"options": {
				"buildTarget": "design-app:build-storybook",
				"staticFilePath": "dist/storybook/design-app"
			},
			"configurations": {
				"ci": {
					"buildTarget": "design-app:build-storybook:ci"
				}
			}
		}
	}
}
