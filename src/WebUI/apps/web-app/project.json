{
	"name": "web-app",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"prefix": "app",
	"sourceRoot": "apps/web-app/src",
	"tags": [],
	"targets": {
		"deploy": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"nx build web-app --configuration=production",
					"docker build -f ./apps/web-app/Dockerfile . -t solarengineer-web-ui:1.0.2"
				],
				"parallel": false
			}
		},
		"build": {
			"executor": "@angular-devkit/build-angular:browser",
			"outputs": [
				"{options.outputPath}"
			],
			"options": {
				"outputPath": "dist/apps/web-app",
				"index": "apps/web-app/src/index.html",
				"main": "apps/web-app/src/main.ts",
				"polyfills": [
					"zone.js"
				],
				"tsConfig": "apps/web-app/tsconfig.app.json",
				"assets": [
					"apps/web-app/src/favicon.ico",
					"apps/web-app/src/assets",
					{
						"input": "libs/shared/svgs/src/lib",
						"glob": "**/*",
						"output": "assets/svgs"
					},
					{
						"input": "libs/shared/assets/src/lib",
						"glob": "**/*",
						"output": "assets"
					}
				],
				"styles": [
					"apps/web-app/src/styles.scss"
				],
				"scripts": []
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "5mb",
							"maximumError": "10mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "2kb",
							"maximumError": "4kb"
						}
					],
					"outputHashing": "all",
					"fileReplacements": [
						{
							"replace": "libs/shared/environment/src/lib/environment.ts",
							"with": "libs/shared/environment/src/lib/environment.prod.ts"
						},
						{
							"replace": "libs/shared/environment/src/lib/auth0.ts",
							"with": "libs/shared/environment/src/lib/auth0.prod.ts"
						}
					]
				},
				"development": {
					"buildOptimizer": false,
					"optimization": false,
					"vendorChunk": true,
					"extractLicenses": false,
					"sourceMap": true,
					"namedChunks": true
				}
			},
			"defaultConfiguration": "production"
		},
		"serve": {
			"executor": "@angular-devkit/build-angular:dev-server",
			"options": {
				"port": 4200
			},
			"configurations": {
				"production": {
					"browserTarget": "web-app:build:production"
				},
				"development": {
					"browserTarget": "web-app:build:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"browserTarget": "web-app:build"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": [
				"{options.outputFile}"
			],
			"options": {
				"lintFilePatterns": [
					"apps/web-app/**/*.ts",
					"apps/web-app/**/*.html"
				]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": [
				"{workspaceRoot}/coverage/{projectRoot}"
			],
			"options": {
				"jestConfig": "apps/web-app/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	}
}
