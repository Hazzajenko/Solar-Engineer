FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["ApiGateways/GrpcGateway/GrpcGateway.csproj", "ApiGateways/GrpcGateway/"]
RUN dotnet restore "ApiGateways/GrpcGateway/GrpcGateway.csproj"
COPY . .
WORKDIR "/src/ApiGateways/GrpcGateway"
RUN dotnet build "GrpcGateway.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "GrpcGateway.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "GrpcGateway.dll"]
